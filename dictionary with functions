class library:
  def  __init__(self):
    self.books = {}
  def add_books(self,title,author):
    self.books[title] = author
    print("a book is added")
  def remove(self,title):
    if title in self.books:
      del self.books[title]
      print("a book is removed")
    else :
      print("book not found")
   def display_books(self):
    if not self.books:
            print("No books available in the library.")
    else:
        print("\nBooks in Library:")
    for title, author in self.books.items():
        print(f'Title: "{title}", Author: {author}')

library = library()
library.add_books("The Alchemist", "Paulo Coelho")
library.add_books("Python Basics", "John Doe")

library.display_books()

library.remove_books("The Alchemist")

library.display_books()



              


 
  
